<h1>New Admin Profile</h1>
<body style="background-color:#AFDCEC">
<% if @adminprofile.errors.any? %>
   <p><b>Adminprofile Update failed!! Please fix following:</b></p>
   <div style= "background-color: #ff3333">
    <ul>
    <% @adminprofile.errors.full_messages.each do |message|%>
        <li><%= message %></li>
    <% end %>
    </ul>
    </div>
<% end %>

<%= form_for @adminprofile do |f| %>
    <p>
    First Name<br>
    <%= f.text_field :first_name %>
    </p>

    <p>
    Last Name<br>
    <%= f.text_field :last_name %>
    </p>

    <p>
    Date of Birth<br>
    <%= f.text_field :date_of_birth %>
    </p>

    <p>
    Address<br>
    <%= f.text_field :address %><br>
    </p>

    <p>
    City<br>
    <%= f.text_field :city %><br>
    </p>

    <p>
    State<br>
    <%= f.text_field :state %><br>
    </p>

    <p>
    Zip Code<br>
    <%= f.text_field :zipcode %><br>
    </p>

    <p>
    Country<br>
    <%= f.text_field :country %><br>
    </p>

    <p>
    Phone<br>
    <%= f.text_field :phone %><br>
    </p>

    <p>
    Email<br>
    <%= f.text_field :email %><br>
    </p>

    <p>
    UserName<br>
    <%= f.text_field :username %><br>
    </p>

    <p>
    Password<br>
    <%= f.password_field :password %><br>
    </p>


    <p>
    <%= f.submit "Create Adminprofile" %>
    </p>
    
<% end %>
</body>
